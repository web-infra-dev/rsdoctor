{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "inputs": [
        "{projectRoot}/src/**/*",
        "!{projectRoot}/**/*.{md,mdx}",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json",
        "{projectRoot}/modern.config.*",
        "{projectRoot}/scripts/**/*"
      ]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
