{
  "extends": "@rsdoctor/tsconfig/base",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "declaration": true,
    "isolatedModules": true,
    "declarationMap": false,
    "composite": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src", "config"],
  "exclude": ["**/node_modules"],
  "references": [
    {
      "path": "../types/tsconfig.json"
    },
    {
      "path": "../components/tsconfig.json"
    }
  ]
}
