{
  "extends": "@rsdoctor/tsconfig/base",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": false,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "src": ["./src"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules"],
  "references": [
    {
      "path": "../types/tsconfig.json"
    },
    {
      "path": "../utils/tsconfig.json"
    },
    {
      "path": "../graph/tsconfig.json"
    }
  ]
}
