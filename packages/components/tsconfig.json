{
  "extends": "@rsdoctor/tsconfig/base",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "declaration": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "src": ["./src"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
