{
  "extends": "@rsdoctor/tsconfig/base",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "paths": {
      "@zh/*": ["./docs/zh/*"],
      "@en/*": ["./docs/en/*"],
      "@components/*": ["./theme/components/*"],
      "i18n": ["./i18n.json"]
    }
  },
  "mdx": {
    "checkMdx": true
  },
  "include": ["src", "theme", "i18n.json"],
  "exclude": ["**/node_modules"]
}
